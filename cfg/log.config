% Config parameters for each system application
[
	{sasl, 	% parameters for SASL application
		[
			{sasl_error_logger,false}, 	% 不安装默认的SASL日志处理模块
			{error_logger_mf_dir,"$(ROOT)/logs/zfor"}, 	% 设置日志保存目录
			{error_logger_mf_maxbytes,10485760}, 	% 每个日志文件最大尺寸1MB
			{error_logger_mf_maxfiles,10} 	% 最多保留10个轮转日志
		]
	}
].

